{
  "name": "xdex-ui",
  "productName": "xDEX-UI",
  "version": "3.0.0",
  "description": "A science fiction desktop running everywhere. Awesome.",
  "keywords": ["desktop", "sci-fi", "gui", "portable", "tty", "terminal"],
  "main": "src/_boot.js",
  "scripts": {
    "start": "electron src --nointro",
    "install-linux": "npm ci && cd src && npm ci && npx electron-rebuild -f -w node-pty",
    "install-windows": "npm ci && cd src && npm ci && npx electron-rebuild -f -w node-pty",
    "prebuild-linux": "rsync -a --info=progress2 src/ prebuild-src --exclude node_modules && node prebuild-minify.js && cd prebuild-src && npm ci",
    "prebuild-darwin": "rsync -a src/ prebuild-src --exclude node_modules && node prebuild-minify.js && cd prebuild-src && npm ci",
    "prebuild-windows": "mkdir prebuild-src && xcopy src\\* prebuild-src\\ /E /C /Q /Y && node prebuild-minify.js && cd prebuild-src && npm ci",
    "build-linux": "npx electron-builder build -l --x64 --ia32 --arm64 --armv7l",
    "build-darwin": "npx electron-builder build -m",
    "build-windows": "npx electron-builder build -w",
    "postbuild-linux": "rm -rf prebuild-src",
    "postbuild-darwin": "rm -rf prebuild-src",
    "postbuild-windows": "rmdir /S /Q prebuild-src",
    "test": "rsync -a --info=progress2 src/ prebuild-src --exclude node_modules && node prebuild-minify.js && cd prebuild-src && npm ci && snyk test && cd .. && rm -rf prebuild-src",
    "init-file-icons": "git submodule update --init",
    "update-file-icons": "git submodule foreach git pull origin master && node file-icons-generator.js",
    "postinstall": "npx electron-rebuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreas-hartmann/xdex-ui.git"
  },
  "author": "Gabriel 'Squared' SAILLARD <gabriel@saillard.dev> (https://gaby.dev)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/andreas-hartmann/xdex-ui/issues"
  },
  "homepage": "https://github.com/andreas-hartmann/xdex-ui#readme",
  "build": {
    "appId": "com.xdex.ui",
    "productName": "xDEX-UI",
    "publish": "github",
    "asar": true,
    "compression": "normal",
    "copyright": "Copyright Â© 2017-2021 Gabriel 'Squared' SAILLARD <gabriel@saillard.dev> (https://gaby.dev)",
    "directories": {
      "output": "dist",
      "app": "prebuild-src"
    },
    "forceCodeSigning": false,
    "npmRebuild": true,
    "artifactName": "xDEX-UI-${os}-${arch}.${ext}",
    "linux": {
      "target": ["AppImage"],
      "category": "System",
      "icon": "media/linuxIcons"
    },
    "appImage": {
      "artifactName": "xDEX-UI-Linux-${arch}.AppImage"
    },
    "mac": {
      "target": [{ "target": "dmg", "arch": ["x64"] }],
      "category": "public.app-category.utilities",
      "icon": "media/icon.icns"
    },
    "dmg": {
      "artifactName": "xDEX-UI-macOS-${arch}.dmg"
    },
    "win": {
      "target": [{ "target": "nsis", "arch": ["x64", "ia32"] }],
      "icon": "media/icon.ico"
    },
    "nsis": {
      "artifactName": "xDEX-UI-Windows-${arch}.exe",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "dependencies": {
    "clean-css": "5.3.3",
    "electron": "^28.3.0",
    "electron-builder": "^24.13.3",
    "mime-types": "^3.0.2",
    "node-json-minify": "3.0.0",
    "terser": "5.44.1"
  },
  "optionalDependencies": {
    "cson-parser": "4.0.9"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.2.13"
  }
}
